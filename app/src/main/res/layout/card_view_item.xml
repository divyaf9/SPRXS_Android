<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/swipe"
    app:leftEdgeSwipeOffset="0dp"
    app:rightEdgeSwipeOffset="0dp"
    android:layout_height="100dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    >

    <LinearLayout
        android:id="@+id/bottom_wraper"
        android:layout_width="240dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Edit"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0076a5"
            android:gravity="center"
            android:text="Edit"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/Share"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2cbb00"
            android:gravity="center"
            android:text="Share"
            android:textColor="#fff" />

    </LinearLayout>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        app:cardCornerRadius="2dp">

        <ImageView
            android:id="@+id/privateImageView"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:src="@drawable/badge_private" />

        <ImageView
            android:id="@+id/publicImageView"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:src="@drawable/badge_public" />

        <TextView
            android:id="@+id/ideaNameText"
            android:layout_width="178dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:gravity="left|center_vertical"
            android:inputType="textMultiLine"
            android:paddingLeft="14dp"
            android:paddingRight="8dp"
            android:text="Idea Name"
            android:textColor="#383736"
            android:textSize="20sp" />
            <!--android:background="@drawable/text_view_shape"-->

        <TextView
            android:id="@+id/ideaIdText"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="52dp"
            android:gravity="center_horizontal|left|center_vertical"
            android:paddingLeft="14dp"
            android:paddingRight="8dp"
            android:text="ID234RF"
            android:textColor="#383736"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/collaboratorImage"
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_icons8_staff" />

        <TextView
            android:id="@+id/collaboratorText"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="2"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

            <!--android:background="@drawable/text_view_shape"-->


        <ImageView
            android:id="@+id/equityImage"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_icons8_euro_money" />

        <TextView
            android:id="@+id/equityText"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="100"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>
</com.daimajia.swipe.SwipeLayout>