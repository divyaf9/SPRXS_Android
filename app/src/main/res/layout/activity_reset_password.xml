<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".activity.ResetPasswordActivity">

    <TextView
        android:layout_width="372dp"
        android:layout_height="63dp"
        android:layout_marginTop="306dp"
        android:layout_marginBottom="479dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Forgot your password?"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<ImageView-->
    <!--android:layout_width="75dp"-->
    <!--android:layout_height="43dp"-->
    <!--android:layout_marginStart="328dp"-->
    <!--android:layout_marginLeft="328dp"-->
    <!--android:layout_marginTop="108dp"-->
    <!--app:layout_constraintStart_toStartOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent"-->
    <!--app:srcCompat="@drawable/sprxs" />-->

    <TextView
        android:layout_width="292dp"
        android:layout_height="42dp"
        android:layout_marginTop="384dp"
        android:layout_marginBottom="420dp"
        android:text="Please enter the email address this account is \nregisteres to."
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailTextView"
        android:layout_width="278dp"
        android:layout_height="55dp"
        android:layout_marginTop="445dp"
        android:layout_marginBottom="346dp"
        android:background="@drawable/text_view_shape"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ResetPasswordbutton"
        android:layout_width="278dp"
        android:layout_height="55dp"
        android:layout_marginTop="542dp"
        android:layout_marginBottom="249dp"
        android:background="@drawable/oval_shape"
        android:text="RESET PASSWORD"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="276dp"
        android:layout_height="145dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="573dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/orange_sprxs_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>