<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditIdeaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ideaIdEditTextView"
                android:layout_width="279dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="102dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/textSpinnerEdit"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="352dp"
                android:layout_height="61dp"
                android:layout_marginTop="92dp"
                android:layout_marginBottom="471dp"
                android:background="@drawable/state_spinnertextview"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ideaNameEditTextView"
                android:layout_width="352dp"
                android:layout_height="61dp"
                android:layout_marginTop="167dp"
                android:layout_marginBottom="393dp"
                android:background="@drawable/text_view_shape"
                android:ems="10"
                android:hint="Idea Name*"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ideaDescriptionEditTextView"
                android:layout_width="351dp"
                android:layout_height="110dp"
                android:layout_marginTop="243dp"
                android:layout_marginBottom="268dp"
                android:background="@drawable/text_view_shape"
                android:hint="Idea Description*"
                android:inputType="textMultiLine"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:scrollbars="vertical"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/filenameEditTextView"
                android:layout_width="250dp"
                android:layout_height="61dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="373dp"
                android:layout_marginEnd="131dp"
                android:layout_marginBottom="187dp"
                android:background="@drawable/text_view_shape"
                android:hint="Attach File(Optional)"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/attachEditButton"
                android:layout_width="97dp"
                android:layout_height="40dp"
                android:layout_marginStart="284dp"
                android:layout_marginTop="383dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="198dp"
                android:noHistory="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_attach_file_black_24dp" />

            <Button
                android:id="@+id/confirmEditButton"
                android:layout_width="278dp"
                android:layout_height="55dp"
                android:layout_marginTop="466dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/oval_shape"
                android:noHistory="true"
                android:text="CONFIRM"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cancelEditButton"
                android:layout_width="278dp"
                android:layout_height="55dp"
                android:layout_marginTop="534dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/oval_shape_white"
                android:text="CANCEL"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/loadingPanel"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:indeterminate="true"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>