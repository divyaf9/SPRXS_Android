    <TextView
        android:id="@+id/ideaIdEditTextView"
        android:layout_width="280dp"
        android:layout_height="21dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:layout_marginBottom="660dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/textSpinnerEdit"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="352dp"
        android:layout_height="61dp"
        android:layout_marginTop="203dp"
        android:layout_marginBottom="582dp"
        android:background="@drawable/state_spinnertextview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ideaNameEditTextView"
        android:layout_width="352dp"
        android:layout_height="61dp"
        android:layout_marginTop="284dp"
        android:layout_marginBottom="501dp"
        android:background="@drawable/text_view_shape"
        android:ems="10"
        android:hint="Idea Name"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ideaDescriptionEditTextView"
        android:layout_width="351dp"
        android:layout_height="110dp"
        android:layout_marginTop="368dp"
        android:layout_marginBottom="368dp"
        android:background="@drawable/text_view_shape"
        android:hint="Idea Description"
        android:inputType="textMultiLine"
        android:paddingLeft="8dp"
        android:paddingBottom="40dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/filenameEditTextView"
        android:layout_width="250dp"
        android:layout_height="61dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="498dp"
        android:layout_marginBottom="287dp"
        android:background="@drawable/text_view_shape"
        android:hint="Attach File(Optional)"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/attachEditButton"
        android:layout_width="97dp"
        android:layout_height="40dp"
        android:layout_marginStart="285dp"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="507dp"
        android:layout_marginBottom="299dp"
        android:noHistory="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_attach_file_black_24dp" />

    <Button
        android:id="@+id/confirmEditButton"
        android:layout_width="278dp"
        android:layout_height="55dp"
        android:layout_marginTop="624dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/oval_shape"
        android:noHistory="true"
        android:text="CONFIRM"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>