<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InviteToCollaborateActivity">


    <TextView
        android:id="@+id/inviteTitleTextView"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="202dp"
        android:layout_marginBottom="491dp"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameInviteTextView"
        android:layout_width="352dp"
        android:layout_height="61dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="410dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Spinner
        android:id="@+id/ideaInviteSpinner"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:layout_width="352dp"
        android:layout_height="61dp"
        android:layout_marginTop="344dp"
        android:layout_marginBottom="326dp"
        android:background="@drawable/state_spinnertextview"
        android:spinnerMode="dropdown"
        android:state_window_focused="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/inviteButton"
        android:layout_width="286dp"
        android:layout_height="55dp"
        android:layout_marginTop="440dp"
        android:layout_marginBottom="236dp"
        android:background="@drawable/oval_shape"
        android:text="INVITE"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancelInviteButton"
        android:layout_width="286dp"
        android:layout_height="55dp"
        android:layout_marginTop="512dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/oval_shape_white"
        android:text="CANCEL"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>