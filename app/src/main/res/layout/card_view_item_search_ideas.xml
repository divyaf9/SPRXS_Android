    <TextView
        android:id="@+id/ideaNameSearchText"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:gravity="left|center_vertical"
        android:inputType="textMultiLine"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Idea Name"
        android:textColor="#383736"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateSearchText"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="260dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
0
    <TextView
        android:id="@+id/ideaIdSearchText"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="#383736"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/searchIdeaImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/categorySearchTextView"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:textColor="#383736"
        android:gravity="center_vertical"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="310dp" />

    <TextView
        android:id="@+id/descSearchIdeaTextView"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="#383736" />


</androidx.cardview.widget.CardView>